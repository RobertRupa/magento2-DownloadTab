<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <body>
      <referenceBlock name="product.info.details">
          <block class="RobertRupa\DownloadTab\Block\Product\View\Downloadtab"
            name="download.tab"
            template="RobertRupa_DownloadTab::product/view/download_tab.phtml"
            group="detailed_info"
            ifconfig="download_tab/general/status">
              <arguments>
                <argument translate="true" name="title" xsi:type="string">Download</argument>
                <argument name="priority" xsi:type="string">90</argument>
                <argument name="sort_order" xsi:type="string">90</argument>
              </arguments>
          </block>
      </referenceBlock>
   </body>
</page>